{
  "name": "virtual-folder",
  "description": "Create an in-memory virtual folder, optionally sync'd with a real folder on disk",
  "version": "0.0.1",
  "author": "Callum Locke",
  "bugs": {
    "url": "https://github.com/callumlocke/virtual-folder/issues"
  },
  "dependencies": {
    "bluebird": "^2.9.24",
    "buffer-equal": "0.0.1",
    "filewalker": "^0.1.2",
    "graceful-fs": "^3.0.6"
  },
  "devDependencies": {
    "async": "^0.9.0",
    "babel": "^5.0.7",
    "coffee-script": "^1.9.1",
    "nodemon": "^1.3.7",
    "rimraf": "^2.3.2",
    "sinon": "^1.14.1",
    "source-map-support": "^0.2.10",
    "tap-spec": "^3.0.0",
    "tape": "^3.5.0",
    "wrench": "^1.5.8"
  },
  "files": [
    "src",
    "lib"
  ],
  "homepage": "https://github.com/callumlocke/virtual-folder",
  "license": "MIT",
  "main": "lib/virtual-folder.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/callumlocke/virtual-folder"
  },
  "scripts": {
    "build": "babel --source-maps --out-dir lib src",
    "clean": "rimraf lib",
    "develop": "nodemon --exec 'npm test' --watch src --watch test --ext coffee,js",
    "prepublish": "npm run clean && npm run build",
    "test": "npm run clean && npm run build && coffee ./test/acceptance.coffee | tap-spec"
  }
}
